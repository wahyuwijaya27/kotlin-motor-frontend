<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Ab_linear_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="10dp"
            >

            <TextView
                android:id="@+id/Ab_txt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:paddingLeft="150dp"
                android:text="About"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Ab_linear_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/Ab_linear_1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/gambar1"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:id="@+id/Ab_img_1"/>

            <TextView
                android:id="@+id/Ab_txt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"
                android:text="ARTA JAYA MOTOR"
                android:textSize="25sp"
                android:textStyle="bold"
                />

            <LinearLayout
                android:id="@+id/Ab_linear_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/bg_rectangle"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/Ab_txt_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp"
                    android:paddingVertical="10dp"
                    android:textAlignment="center"
                    android:text="Arta Jaya Motor adalah dealer motor bekas terkemuka yang berlokasi di Jl. Nologaten No.144, Nologaten, Caturtunggal, Kec. Depok, Kabupaten Sleman, Daerah Istimewa Yogyakarta. Menawarkan pilihan motor bekas berkualitas dengan harga kompetitif, kami juga menyediakan layanan penjualan, pembiayaan, dan purna jual yang memuaskan bagi pelanggan kami."
                    android:textSize="13sp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>