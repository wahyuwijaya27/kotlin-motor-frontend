    <!-- Checkout Button -->
    <TextView
        android:id="@+id/C_txt_tata_cara_pembelian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Petunjuk Pembelian"
        android:textColor="@color/primaryColor"
        android:textStyle="bold"
        android:layout_below="@id/C_txt_nomorTelp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="8dp"
        android:background="?attr/selectableItemBackground" />


    <Button
        android:id="@+id/C_btn_Checkout"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/custom_button"
        android:text="Checkout"
        android:textColor="@color/white"
        android:layout_below="@id/C_txt_tata_cara_pembelian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <Button
        android:id="@+id/C_btn_batal"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:background="@drawable/custom_button"
        android:backgroundTint="@color/gray"
        android:text="Batal"
        android:textColor="@color/white"
        android:layout_below="@id/C_btn_Checkout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

